<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.galan.tubes.account">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/photos"
                android:layout_marginTop="22dp"
                android:id="@+id/imageView3"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="Nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_below="@+id/imageView3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp" />


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:text="Your Name"
                android:background="@drawable/rounded"
                android:textAlignment="center"
                android:ems="10"
                android:id="@+id/nameField"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textAlignment="center"
                android:inputType="textPersonName"
                android:text="Your eMail"
                android:ems="10"
                android:background="@drawable/rounded"
                android:layout_below="@+id/textView4"
                android:layout_alignLeft="@+id/nameField"
                android:layout_alignStart="@+id/nameField"
                android:id="@+id/emailField" />

            <Button
                android:text="APPLY CHANGES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/applyButton"
                android:elevation="0dp"
                android:layout_marginBottom="36dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="eMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/nameField"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_below="@+id/emailField"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:background="@drawable/rounded"
                android:ems="10"
                android:id="@+id/passwordField"
                android:layout_below="@+id/textView3"
                android:layout_alignLeft="@+id/emailField"
                android:layout_alignStart="@+id/emailField" />

            <TextView
                android:text="Old Names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView3"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_marginTop="8dp"
                android:id="@+id/oldnames" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
