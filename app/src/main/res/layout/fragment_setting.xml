<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.example.galan.tubes.switcher">

    <android.support.v7.widget.CardView
        android:id="@+id/accountC"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            app:srcCompat="@drawable/account_xxhdpi"
            android:id="@+id/accountButt" />

        <TextView
            android:text="ACCOUNT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:id="@+id/textView5" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/categoryC"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            app:srcCompat="@drawable/category_xxhdpi"
            android:id="@+id/categoryButt" />

        <TextView
            android:text="CATEGORY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:id="@+id/textView6" />
    </android.support.v7.widget.CardView>

</LinearLayout>
